{
  "name": "screen-time-status-bar",
  "displayName": "Screen Time",
  "description": "Track your live screen time in the status bar, with options to save, delete, and manage workspace-specific usage data easily.",
  "version": "0.0.4",
  "publisher": "bshashikiran",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.showScreenTime",
        "title": "Show Screen Time"
      },
      {
        "command": "extension.deleteScreenTime",
        "title": "Delete Screen Time"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:json"
  ],
  "dependencies": {
    "screen-time-status-bar": "file:"
  },
  "devDependencies": {
    "vsce": "^2.5.0"
  },
  "icon": "images/screen-time-status-bar-icon.png",
  "galleryBanner": {
    "color": "#1E90FF",
    "theme": "dark"
  }
}
